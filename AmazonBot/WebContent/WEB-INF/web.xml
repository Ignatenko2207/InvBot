<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>AmazonBot</display-name>
  <description>AmazonBot</description>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AuthorisationServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.AuthorisationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserActionServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.UserActionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AccountActionServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.AccountActionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ItemActionServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.ItemActionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AccountFilterServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.AccountFilterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AmazonActionServlet</servlet-name>
    <servlet-class>com.amazoninvestorclub.servlets.AmazonActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorisationServlet</servlet-name>
    <url-pattern>/servlets</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserActionServlet</servlet-name>
    <url-pattern>/servlets/UserActionServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AccountActionServlet</servlet-name>
    <url-pattern>/servlets/AccountActionServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ItemActionServlet</servlet-name>
    <url-pattern>/servlets/ItemActionServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AccountFilterServlet</servlet-name>
    <url-pattern>/servlets/AccountFilterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AmazonActionServlet</servlet-name>
    <url-pattern>/servlets/AmazonActionServlet</url-pattern>
  </servlet-mapping>
</web-app>